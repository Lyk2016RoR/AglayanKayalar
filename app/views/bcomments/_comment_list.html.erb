<% @book.bcomments.each do |comment| %>
	<small><%= comment.user.email %> says:</small>
	<p>
        <%= comment.body %>
        <% if current_user.present? && comment.user_id == current_user.id %>
          <small><%= link_to "Delete", book_bcomment_path(@book, comment), method: :delete %></small>
        <% end %>
      </p>
<%end%>
